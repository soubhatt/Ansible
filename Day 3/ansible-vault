[student@workstation ansible-navigator]$ mkdir data-secret
[student@workstation ansible-navigator]$ cd data-secret/
[student@workstation data-secret]$ cp ../inventory ../ansible.cfg .
[student@workstation data-secret]$ ls
    ansible.cfg  inventory
[student@workstation data-secret]$

