[student@workstation ~]$ podman images
    REPOSITORY                                                            TAG         IMAGE ID      CREATED      SIZE
    quay.io/ansible/creator-ee                                            v0.4.2      12571ac947cf  3 years ago  2.4 GB
[student@workstation ~]$
[student@workstation ~]$ ansible-navigator -i ansible-navigator/inventory web -m command -a "uptime"
[student@workstation ~]$ podman login registry.redhat.io
[student@workstation ~]$ podman rmi quay.io/ansible/creator-ee:v0.4.2
[student@workstation ~]$ podman pull registry.redhat.io/ansible-automation-platform-25/ee-supported-rhel9
[student@workstation ~]$ podman images
    REPOSITORY                                                            TAG         IMAGE ID      CREATED      SIZE
    registry.redhat.io/ansible-automation-platform-25/ee-supported-rhel9  latest      e9c33b173d82  6 weeks ago  2.28 GB
[student@workstation ~]$ vim ~/.ansible-navigator.yml
[student@workstation ~]$ cat ~/.ansible-navigator.yml
    ---
    ansible-navigator:
      execution-environment:
        enabled: true
        image: registry.redhat.io/ansible-automation-platform-25/ee-supported-rhel9:latest
        pull:
          policy: missing

[student@workstation ansible-navigator ~]$ touch ansible.cfg
[student@workstation ansible-navigator]$ vim ansible.cfg
[student@workstation ansible-navigator]$ cat ansible.cfg
    [defaults]
    inventory = /home/student/ansible-navigator/inventory
    remote_user =  student
    ask_pass = false

    [privilege_escalation]
    become = true
    become_method = sudo
    become_user = root
    become_ask_pass = false
[student@workstation ansible-navigator]$
[student@workstation ansible-navigator]$ ansible-navigator exec ansible -- -i inventory web -m ansible.builtin.ping
