# ======== FOR USER STUDENT ====== #
[student@workstation ~]$ ssh-keygen -t rsa -b 4096 -f ~/.ssh/ansible_id_rsa -C "ansible@workstation" -N ""
[student@workstation ~]$ ssh-copy-id -i ~/.ssh/ansible_id_rsa.pub student@server1
[student@workstation ~]$ ssh-copy-id -i ~/.ssh/ansible_id_rsa.pub student@server2
[student@workstation ~]$ sudo dnf install -y podman
[student@workstation ~]$ mkdir ansible-navigator
[student@workstation ~]$ cd ansible-navigator
[student@workstation ansible-navigator]$ vim inventory
[student@workstation ansible-navigator]$ cat inventory
    [student@workstation ansible-navigator]$ cat inventory
    server1
    server2

    [web]
    server1
    server2

    [database_dev]
    server1

    [database_prod]
    server2
[student@workstation ansible-navigator]$ cd
[student@workstation ~]$ ansible-navigator
