Creating master_ansible,ansible_worker1 and ansible_worker2 from linode

#======== SETTING UP MASTER NODE===========#

[root@workstation ~]# hostnamectl set-hostname workstation.example.com
[root@workstation ~]# vim /etc/hosts
    172.236.187.96 workstation.example.com workstation
    172.236.172.15 server1.example.com server1
    172.236.172.47 server2.example.com server2

[root@workstation ~]# yum clean all
[root@workstation ~]# yum update && yum upgrade -y
[root@workstation ~]# dnf update
[root@workstation ~]# python3 --version
[root@workstation ~]#useradd student
[root@workstation ~]# dnf install epel-release -y
[root@workstation ~]# dnf install fail2ban fail2ban-firewalld -y
[root@workstation ~]# systemctl enable --now fail2ban
[root@workstation ~]# systemctl enable --now firewalld
[root@workstation ~]# vim /etc/fail2ban/jail.d/sshd.local
    [sshd]
    enabled = true
    port = ssh
    filter = sshd
    backend = systemd
    logpath = /var/log/secure
    maxretry = 3
    findtime = 600
    bantime = 1d
    banaction = firewallcmd-ipset
[root@workstation ~]# systemctl restart fail2ban
[root@workstation ~]# vim /etc/sudoers.d/student
    student ALL=(ALL) NOPASSWD:ALL    
[root@workstation ~]# dnf install python3-pip
[root@workstation ~]# pip3.9 install 'ansible-navigator[ansible-core]'==2.1.0
[root@workstation ~]# ping server1
    PING server1.example.com (172.236.172.15) 56(84) bytes of data.
